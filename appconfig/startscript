#!/usr/bin/env bash

set -o pipefail
SELF=$(readlink -nf $0)
export CONFIG_BASE_DIR=$(dirname ${SELF})

source ${CONFIG_BASE_DIR}/logging.sh
source ${CONFIG_BASE_DIR}/utils.sh
source ${CONFIG_BASE_DIR}/macros.sh

if [[ "$1" == "--addnodes" ]]; then
    ## Nothing to do on the existing nodes when we receive this notification.
    exit 0
elif [[ "$1" == "--delnodes" ]]; then
    ## Nothing to do on the existing nodes when we receive this notification.
    exit 0
elif [[ "$1" == "--configure" ]]; then
    log "Configuration started"
    cp -rvf ${CONFIG_BASE_DIR}/hive/hive-site.xml /etc/hive/conf/hive-site.xml
    REPLACE_PATTERN @@@@HIVESERVER2_IP@@@@ /etc/hive/conf/hive-site.xml GET_IPADDR_LIST hiveserver2
    REPLACE_PATTERN @@@@METASTORE_DB_IP@@@@ /etc/hive/conf/hive-site.xml GET_IPADDR_LIST metastore
    REPLACE_PATTERN @@@@METASTORE_DB_IP@@@@ ${CONFIG_BASE_DIR}/metastore.sh GET_IPADDR_LIST metastore
    mkdir /tmp/hive/
    cd /tmp/hive/
    log "Configuration finished"
    ## Fall through to start the configuration.
else
    echo "ERROR: Unknown command line option(s): '$@'"
    exit 10
fi

####################### AUTOGENERATED CODE STARTS BELOW #######################

if  [[ "${ROLE}" == "metastore" ]]; then
    ${CONFIG_BASE_DIR}/metastore.sh
fi

if  [[ "${ROLE}" == "hiveserver2" ]]; then
    log "Starting hiveserver2"
fi

